<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context=".MainActivity$StartFragment">

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="466dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity$StartFragment">

            <ImageView
                    android:id="@+id/start_m2nlogo"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:antialias="true"
                    android:src="@drawable/ic_launcher"/>

            <TextView
                    android:id="@+id/welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/start_m2nlogo"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Välkommen till Malmös bästa allt-i-ett app för en perfekt utekväll!"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/welcome_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="Vad kan jag göra i appen?"/>

            <Button
                    android:id="@+id/findNearestSystembolag"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/callCab"
                    android:layout_centerHorizontal="true"
                    android:text="Hitta närmaste Systembolag"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            <Button
                    android:id="@+id/playGame"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/findNearestSystembolag"
                    android:layout_centerHorizontal="true"
                    android:text="Hitta närmaste uteställe"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            <Button
                    android:id="@+id/findNearestPub"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/playGame"
                    android:layout_centerHorizontal="true"
                    android:text="Slumpa ett ölspel"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="Slumpknappar!"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            <Button
                    android:id="@+id/callCab"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/findNearestSystembolag"
                    android:layout_below="@+id/start_blixt"
                    android:text="Ring en taxi"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

            <Button
                    android:id="@+id/start_blixt"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView1"
                    android:layout_centerHorizontal="true"
                    android:text="Sätt på blixten"/>

        </RelativeLayout>

    </TableLayout>

</ScrollView>