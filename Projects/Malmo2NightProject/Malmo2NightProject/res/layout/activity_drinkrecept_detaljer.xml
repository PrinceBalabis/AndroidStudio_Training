<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".DrinkreceptDetaljerActivity">

    <ScrollView
            android:id="@+id/drinkrecept_scrollview_regler_ANVAND_EJ"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:fadeScrollbars="false"
            android:padding="5dp">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/drinkrecept_kategorier_titel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="22sp"/>

            <TextView
                    android:id="@+id/drinkrecept_kategorier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/drinkrecept_kategorier_titel"/>
        </RelativeLayout>
    </ScrollView>

    <TextView
            android:id="@+id/blackLine_blingbling"
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_below="@id/drinkrecept_scrollview_regler_ANVAND_EJ"
            android:background="#000000"/>

    <ScrollView
            android:id="@+id/drinkrecept_scrollview_instruktionstext_ANVAND_EJ"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/blackLine_blingbling"
            android:fadeScrollbars="false"
            android:padding="5dp">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/drinkrecept_ingredienser_titel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredienser"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="22sp"/>

            <TextView
                    android:id="@+id/drinkrecept_ingredienser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/drinkrecept_ingredienser_titel"
                    android:textSize="15sp"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>