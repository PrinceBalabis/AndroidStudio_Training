<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

    <TextView
            android:id="@+id/titel_spel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ölpong"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
            android:id="@+id/antalSpelare_spel"
            android:text="2-4 spelare"
            android:layout_above="@+id/antalSpelare_spel"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/krav_spel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Pingisboll, muggar"
            android:layout_marginBottom="13dp"
            android:textSize="12sp"/>

    <TextView
            android:id="@+id/titel_krav_spel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/krav_spel"
            android:layout_alignParentLeft="true"
            android:text="Spelet kräver:"
            android:textSize="12sp"/>

</RelativeLayout>